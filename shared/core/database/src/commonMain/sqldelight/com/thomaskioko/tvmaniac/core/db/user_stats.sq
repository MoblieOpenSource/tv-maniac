CREATE TABLE user_stats(
user_slug TEXT NOT NULL PRIMARY KEY,
months Text NOT NULL,
days Text NOT NULL,
hours Text NOT NULL,
collected_shows Text NOT NULL,
episodes_watched Text NOT NULL
);

insertOrReplace:
INSERT OR REPLACE INTO user_stats(
user_slug,
months,
days,
hours,
collected_shows,
episodes_watched
)
VALUES(?,?,?,?,?,?);

select:
SELECT *
FROM user_stats;

delete:
DELETE FROM user_stats;