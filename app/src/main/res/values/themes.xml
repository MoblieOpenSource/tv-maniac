    <style name="Theme.TvManiac.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Tivi.Immerse" parent="Theme.TvManiac.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/use_light_nav_bar
        </item>
    </style>

    <style name="Theme.TvManiac.Home" parent="Theme.Tivi.Immerse">
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status_bar
        </item>
    </style>
