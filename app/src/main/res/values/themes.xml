<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Platform.Theme.TvManiac" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Base.Theme.TvManiac" parent="Platform.Theme.TvManiac">
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.TvManiac" parent="Base.Theme.TvManiac">
        <!--        &lt;!&ndash; Status bar color. &ndash;&gt;-->
